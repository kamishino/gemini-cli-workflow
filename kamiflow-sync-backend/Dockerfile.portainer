FROM node:18-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++ git wget

WORKDIR /tmp

# Clone repository
RUN git clone https://github.com/kamishino/gemini-cli-workflow.git

# Install dependencies
WORKDIR /tmp/gemini-cli-workflow/kamiflow-sync-backend
RUN npm install --production

# Set working directory
WORKDIR /tmp/gemini-cli-workflow/kamiflow-sync-backend

# Expose port
EXPOSE 3030

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=10s \
  CMD wget --quiet --tries=1 --spider http://localhost:3030/health || exit 1

# Start server
CMD ["node", "src/server.js"]
