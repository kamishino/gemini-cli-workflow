{
  "name": "kamiflow",
  "private": true,
  "description": "Indie Builder's OS - Root Workspace (pnpm Monorepo)",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter gemini-cli-kamiflow run dev",
    "build": "pnpm --filter gemini-cli-kamiflow run build",
    "sync": "pnpm --filter gemini-cli-kamiflow run sync",
    "transpile": "pnpm --filter gemini-cli-kamiflow run transpile",
    "sync:kit": "node packages/antigravity-kit/scripts/sync-templates.js",
    "sync:dogfood": "node -e \"require('fs-extra').copySync('resources/blueprints/workflows', '.agent/workflows', {overwrite:true}); console.log('✅ Dogfood: blueprints → .agent/workflows')\"",
    "sync-all": "pnpm run dev && pnpm run build && pnpm run sync:kit && pnpm run sync:dogfood",
    "test": "pnpm --filter gemini-cli-kamiflow run test",
    "test:coverage": "pnpm --filter gemini-cli-kamiflow run test:coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "doctor": "pnpm --filter gemini-cli-kamiflow run doctor",
    "update": "pnpm --filter gemini-cli-kamiflow run update",
    "clean": "pnpm --filter gemini-cli-kamiflow run clean",
    "preinstall": "npx only-allow pnpm"
  },
  "version": "2.56.0",
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/preset-env": "^7.29.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  }
}
