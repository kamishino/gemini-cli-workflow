# KamiFlow Sync Backend Configuration

# Server
PORT=3000
NODE_ENV=production

# Authentication
# Generate a secure API key: openssl rand -hex 32
API_KEY=your-secret-api-key-here

# Database
DB_PATH=/data/kamiflow-sync.db

# Storage
MAX_FILE_SIZE=10485760
MAX_FILES_PER_PROJECT=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info
