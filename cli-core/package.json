{
  "name": "gemini-cli-kamiflow",
  "version": "2.35.0",
  "description": "Professional CLI manager for KamiFlow - The Indie Builder's OS for Gemini CLI",
  "main": "bin/kami.js",
  "bin": {
    "kamiflow": "bin/kami.js",
    "kami": "bin/kami.js",
    "gemini-cli-kamiflow": "bin/kami.js",
    "kamiflow-install": "logic/installer.js"
  },
  "files": [
    "bin/",
    "logic/",
    "validators/",
    "scripts/",
    "package.json",
    "../install.ps1",
    "../install.sh",
    "../.gemini/",
    "../.windsurf/",
    "../docs/"
  ],
  "scripts": {
    "clean": "node -e \"const fs = require('fs-extra'); if (fs.existsSync('../dist')) fs.removeSync('../dist'); console.log('ðŸ§¹ Cleaned dist/ folder.');\"",
    "sync": "node scripts/sync-docs.js",
    "transpile": "node bin/kami.js transpile",
    "dev": "cross-env KAMI_ENV=development npm run transpile",
    "build": "npm run clean && npm run sync && cross-env KAMI_ENV=production npm run transpile",
    "version": "node scripts/sync-version.js && node scripts/sync-docs.js",
    "postversion": "node scripts/git-release.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "bench": "node benchmarks/runner.js",
    "bench:config": "node benchmarks/config-loading.bench.js",
    "bench:transpiler": "node benchmarks/transpiler.bench.js"
  },
  "keywords": [
    "gemini",
    "cli",
    "kamiflow",
    "ai",
    "workflow",
    "template"
  ],
  "author": "KamiShino",
  "license": "MIT",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.2.0",
    "glob": "^13.0.0",
    "inquirer": "^9.2.12",
    "upath": "^2.0.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamishino/gemini-cli-workflow.git"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "@types/jest": "^29.5.11"
  }
}
